<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#ADA2FF" />
        </shape>
    </item>
    <item
        android:left="8sp"
        android:top="8sp"
        android:right="8sp"
        android:bottom="8sp">
        <shape android:shape="rectangle">
            <solid android:color="#FFE5F1" /> <!-- White color for the inner area -->
            <stroke
                android:width="2dp"
                android:color="#C0DEFF" /> <!-- Black color for the border -->
        </shape>
    </item>
</layer-list>